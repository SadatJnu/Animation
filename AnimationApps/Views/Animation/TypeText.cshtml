
@{
    ViewBag.Title = "TypeText";
}

<style>
    body {
        margin:0;
        padding:0;
    }
    h1 {
        position:absolute;
        top:50%;
        left:34%;
        right: 0;
        transform: translate(-50%, -50%);
        text-transform: uppercase;
        font-family:Consolas;
        letter-spacing: 0px;
        margin: 0;
        padding:0;
        color: transparent;
    }
    h1:before {
        content: attr(data-text);
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height: 100%;
        color: #000;
        overflow:hidden;
        /*border-right: 1px solid #000;*/
        animation: type 35s steps(30) infinite;
        white-space:nowrap;
    }

</style>

