
@{
    ViewBag.Title = "ColumnFilter";
}

    
<link href="~/Content/jquerysctipttop.css" rel="stylesheet" />
<link href="~/Content/ColumnFilter_bootstrap.css" rel="stylesheet" />

<style>
        body {
            background-color: #fafafa;
            font-family: 'Roboto';
        }
      label {
        padding: 10px;
    }            
    </style>

<body>
    <div class="container" style="margin-top:2em;">
        <h1>ColumnFiltering Demo</h1>
        <div class="column-list form-group"></div>
        <table class="table table-inverse table-bordered table-striped">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>Dhaka</td>
                    <td>01777777</td>
                    <td>john@example.com</td>
                </tr>
                <tr>
                    <td>Mary</td>
                    <td>Moe</td>
                    <td>Bangladesh</td>
                    <td>0199999</td>
                    <td>mary@example.com</td>
                </tr>
                <tr>
                    <td>July</td>
                    <td>Dooley</td>
                    <td>Joshore</td>
                    <td>0166666</td>
                    <td>july@example.com</td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="~/Scripts/SideNav_jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/columnfilter_jquery.-0.0.1.js"></script>

    <script>
        $('table').columnFilter();
    </script>

</body>

