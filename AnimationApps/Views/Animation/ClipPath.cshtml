
@{
    ViewBag.Title = "ClipPath";
}

<style>
    body {
        background-color: antiquewhite;
    }
</style>

<body>
    <img class="image" src="../../Content/Images/9.jpg" alt="Check out unsplash.it">
    <img class="image-2" src="../../Content/Images/9.jpg" alt="Check out unsplash.it" data-clip="5% 5%, 100% 0%, 100% 75%, 75% 75%, 75% 100%, 50% 75%, 0% 75%">

    <script src="~/Scripts/clippath.min.js"></script>


    <script type="text/javascript">
        console.log('Applying clip-path with jQuery');
        ClipPath('.image', '5% 5%, 100% 0%, 100% 75%, 75% 75%, 75% 100%, 50% 75%, 0% 75%');
        ClipPath('.image-2');

        setTimeout(function () {
            ClipPath('.image', '5% 5%, 100% 0%, 100% 75%, 75% 75%, 75% 100%');
            console.log('Changed after some time...');
        }, 4000);

    </script>
</body>
