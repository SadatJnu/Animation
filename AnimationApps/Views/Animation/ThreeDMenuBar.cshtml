    <script>
        if ($.fn.makisu.enabled) {

            var $sashimi = $('.sashimi');
            var $nigiri = $('.nigiri');
            var $maki = $('.maki');

            // Create Makisus

            $nigiri.makisu({
                selector: 'dd',
                overlap: 0.85,
                speed: 1.7
            });

            $maki.makisu({
                selector: 'dd',
                overlap: 0.6,
                speed: 0.85
            });

            $sashimi.makisu({
                selector: 'dd',
                overlap: 0.2,
                speed: 0.5
            });

            // Open all

            $('.list').makisu('open');

            // Toggle on click

            $('.toggle').on('click', function () {
                $('.list').makisu('toggle');
            });

            // Disable all links

            $('.demo a').click(function (event) {
                event.preventDefault();
            });

        } else {

            $('.warning').show();
        }
    </script>

